generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum SourceType {
  github
  gitlab
  bitbucket
}

enum EventType {
  opened
  merged
  closed
  changes_requested
  pushed
  dismissed
  approved
  unapproved
  reopen
}

model Project {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  repository String   @unique
  events     Event[]
  tickets    Ticket[]
}

model User {
  id              Int        @id @default(autoincrement())
  username        String     @unique
  events          Event[]
  revisions       Revision[]
  reviewed_events Event[]    @relation("ReviewedEvents")
}

model Ticket {
  id         Int     @id @default(autoincrement())
  code       String  @unique
  events     Event[]
  project_id Int
  project    Project @relation(fields: [project_id], references: [id])
}

model Event {
  id            Int        @id @default(autoincrement())
  project       Project?   @relation(fields: [project_id], references: [id])
  project_id    Int?
  author        User?      @relation(fields: [author_id], references: [id])
  author_id     Int?
  reviewer      User?      @relation("ReviewedEvents", fields: [reviewer_id], references: [id])
  reviewer_id   Int?
  ticket        Ticket?    @relation(fields: [ticket_id], references: [id])
  ticket_id     Int?
  source        SourceType
  branch        String?
  pr_number     Int?
  additions     Int?
  deletions     Int?
  changed_files Int?
  event_type    EventType
  date_created  DateTime   @default(now())
  payload       Payload?   @relation("Payload")
  revision      Revision?

  @@index([project_id])
  @@index([author_id])
  @@index([ticket_id])
  @@index([author_id, ticket_id])
}

model Payload {
  id          Int   @id @default(autoincrement())
  raw_payload Json
  event       Event @relation("Payload", fields: [event_id], references: [id])
  event_id    Int   @unique
}

model Revision {
  id          Int   @id @default(autoincrement())
  pr_event_id Int
  pr_event    Event @relation(fields: [pr_event_id], references: [id])
  reviewer_id Int
  reviewer    User  @relation(fields: [reviewer_id], references: [id])

  @@unique([pr_event_id])
  @@index([pr_event_id])
  @@index([reviewer_id])
}
